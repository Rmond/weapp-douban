.header {
  display: flex;
  justify-content: center;
  border-bottom: 1rpx solid #ccc;
}

.header text {
  padding: 20rpx;
  color: #999;
  font-size: 25rpx;
  text-align: center;
}

.user {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.user-avatar {
  width: 100rpx;
  height: 780rpx;
  margin: 40rpx;
  border-radius:50%;
}

.user-nickname {
  color: #aaa;
  font-size: 35rpx;
  margin-bottom: 10rpx;
}

.bt {
  padding: 5rpx;
  background-color: #999;
}