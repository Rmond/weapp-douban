<view class="container">
  <view class="user" bindtap="getUserInfo">
    <image class="user-avatar" src="{{ userInfo.avatarUrl }}" mode="widthFix"/>
    <text class="user-nickname">{{ userInfo.nickName }}</text>
    <text hidden="{{ !userInfo.city }}">{{ userInfo.city }}, {{ userInfo.province }}</text>
    <text hidden="{{ !userInfo.city }}"> Thanks~ </text>
  </view>
  <view class="user">
   <button bindtap="joinList">参与的抽奖</button>
   <button>我的心愿单</button>
   <button>中奖记录</button>
  </view>
</view>


